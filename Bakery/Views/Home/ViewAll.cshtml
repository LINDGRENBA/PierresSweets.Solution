@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model List<Bakery.Models.Treat>;


<div class="row">
  <div class="col-sm-6 col-xs-12">
    <h2 class="header-list">Treats</h2>
    @if(Model.Count == 0)
    {
      <h4>There aren't any treats in the bakery yet!</h4>
    }
    else
    {
      <ul class="treats-list splash">
      @foreach(Treat treat in Model)
      {
        <li>@treat.Type</li>
      }
      </ul>
    }
  </div>
  <div class="col-sm-6 col-xs-12">
    <h2 class="header-list">Flavors</h2>
    @if(ViewBag.Flavors.Count == 0)
    {
      <h4>There aren't any flavors for our treats yet!</h4>
    }
    else
    {
      <ul class="flavors-list splash">
        @foreach(var join in @ViewBag.Flavors)
        {
          <li>@join.Type</li>
        }
      </ul>
    }
  </div>
</div>