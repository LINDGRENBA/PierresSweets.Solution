@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat;

<div class="warning">
  <h1>Are you sure you want to delete this treat?</h1>
  <h3>@Html.DisplayFor(model => model.Type)</h3>
</div>

<div class="form">
  @using (Html.BeginForm())
  {
    <button class="btn btn-warning">@Html.ActionLink("Cancel", "Index")</button>
    <button type="submit" class="btn btn-warning">Delete</button>
  }
</div>